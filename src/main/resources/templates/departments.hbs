{{#partial "content"}}
    <div class="container">
        <div class="indexRow">
            <div class="col-md-12 mb-4 white-text text-center">
                <div class="row">
                    <div class="col-sm-4 col-sm-offset-4 departments">
                        <h3 class="text-center">Departments:</h3>
                            {{#if departments}}
                                {{#each departments as |e|}}
                                    <h4 id={{e.id}}>{{e.name}}</h4>
                                    <p id={{e.id}}>{{e.description}}</p>
                                {{/each}}
                            {{/if}}
                        <a href="/create/department"><button type="button" class="registerbtn">Add Departments</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}