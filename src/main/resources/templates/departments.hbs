{{#partial "content"}}
    <div class="container">
        <div class="indexRow">
            <div class="col-md-12 mb-4 white-text text-center">
                <div class="row">
                    <div class="col-sm-4 col-sm-offset-4 departments">
                        <h3 class="text-center">Departments:</h3>
                            {{#if departments}}
                                {{#each departments as |l|}}
                                    <h5>{{l.name}}</h5>
                                    <p>{{l.description}}</p>
                                {{/each}}
                            {{/if}}
                        <a href="/departments/new"><button type="button" class="registerbtn">Add Departments</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}